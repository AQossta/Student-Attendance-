<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_circle_32dp"
    android:paddingBottom="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/dividerBottomsheet"
        android:layout_width="64dp"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/grey_200"
        android:background="@drawable/divider_5dp_grey_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тіл"
        android:fontFamily="@font/sf_bold_700"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/grey_900"
        app:layout_constraintTop_toTopOf="@+id/dividerBottomsheet"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="32dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/btnSelectEnglish"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_semibold_600"
                android:textColor="@color/grey_900"
                android:textSize="16dp"
                android:text="English"/>
            <View
                android:id="@+id/imgIconBtnSelectEnglish"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_check"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:backgroundTint="@color/grey_300"
            android:background="@drawable/divider_1dp_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/btnSelectKazakh"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_semibold_600"
                android:textColor="@color/grey_900"
                android:textSize="16dp"
                android:text="Қазақша"/>
            <View
                android:id="@+id/imgIconBtnSelectKazakh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_check"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:backgroundTint="@color/grey_300"
            android:background="@drawable/divider_1dp_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/btnSelectRussia"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_semibold_600"
                android:textColor="@color/grey_900"
                android:textSize="16dp"
                android:text="Русский"/>
            <View
                android:id="@+id/imgIconBtnSelectRussia"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_check"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>