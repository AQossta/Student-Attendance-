<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.OnboardingFragment"
    android:background="#818080">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2OnboardingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextOnboardingFragment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_button_12dp_circle"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:text="Әрі қарай"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:fontFamily="@font/sf_bold"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="38dp"
            android:layout_marginHorizontal="24dp"/>

    </LinearLayout>

</FrameLayout>