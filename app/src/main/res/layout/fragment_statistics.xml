<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBackStats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_back"
            android:background="@color/fui_transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Top Bar -->
        <TextView
            android:id="@+id/titleStatistic"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Статистика:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/btnBackStats"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvTextStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/sf_regular_400"
            android:text=" "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/titleStatistic"
            app:layout_constraintTop_toTopOf="@id/titleStatistic"/>

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/light_blue"
            app:layout_constraintTop_toBottomOf="@id/titleStatistic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/btnMoreDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сабақ туралы ақпарат"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Тақырып:"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/btnMoreDescription"
                    app:layout_constraintStart_toStartOf="parent"  />

                <TextView
                    android:id="@+id/textTvLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/textLesson"
                    app:layout_constraintStart_toEndOf="@id/textLesson" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Уақыт:"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/textLesson"
                    app:layout_constraintStart_toStartOf="parent"  />

                <TextView
                    android:id="@+id/tvTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/timeText"
                    app:layout_constraintStart_toEndOf="@id/timeText" />

                <TextView
                    android:id="@+id/groupText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Топ:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/timeText"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvGroupText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/groupText"
                    app:layout_constraintStart_toEndOf="@id/groupText" />

                <TextView
                    android:id="@+id/teacherText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_regular_400"
                    android:text="Оқытушы:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/groupText"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvTeacherText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/teacherText"
                    app:layout_constraintStart_toEndOf="@id/teacherText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/light_blue"
            app:layout_constraintTop_toBottomOf="@id/cardInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/attendanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Қатысу статистикасы"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/totalStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Барлық студенттер:"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/attendanceTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvTotalStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/totalStudents"
                    app:layout_constraintStart_toEndOf="@id/totalStudents" />

                <TextView
                    android:id="@+id/presentStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Қатысты:"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/totalStudents"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvPresentStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/presentStudents"
                    app:layout_constraintStart_toEndOf="@id/presentStudents" />

                <TextView
                    android:id="@+id/attendancePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пайыз:"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/presentStudents"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvAttendancePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/attendancePercentage"
                    app:layout_constraintStart_toEndOf="@id/attendancePercentage" />

                <TextView
                    android:id="@+id/messageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Хабарлама:"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/attendancePercentage"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvMessageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/messageLabel"
                    app:layout_constraintStart_toEndOf="@id/messageLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStudents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/light_blue"
            app:layout_constraintTop_toBottomOf="@id/cardStats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="15dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvClassList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Студенттер тізімі"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewClassList"
                    android:layout_width="0dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvClassList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
