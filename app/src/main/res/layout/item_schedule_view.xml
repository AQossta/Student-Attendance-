<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:background="@color/light_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/light_blue">

        <!-- Левая часть (время) -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Вертикальная линия -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#90CAF9"/>

        <!-- Правая часть (информация о паре) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Шешім қабылдауды қолдау жүйелері"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Топ: АЖ-47 (1-топ)"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_auditorium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Аудитория: 6-қабат, 608"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профессор: Еркебұлан Ж.А."
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лабораториялық жұмыстар"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

